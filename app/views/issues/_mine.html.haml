= form_for Issue.new, method: :post, html: {class: 'form-inline pull-right'} do |f|
  = f.label :url, 'Add specific issue'
  = f.text_field :url, placeholder: 'https://github.com/rails/turbolinks/issues/263', class: 'form-control', style: 'width: 350px;'
  = f.submit '+', class: 'btn btn-default'
%h2
  %i.icon-gear
  Currently Working On
- if @my_issues.present?
  = render 'issues/my_issues_table', issues: @my_issues
- else
  .well.text-center
    %span.lead
      %i.icon-list-ul
      You have no issues you're currently working on. Pick one now
